<h3 class="page-header">
  All Attractions
  <span class="pull-right">
    <%= link_to "New Attraction", new_attraction_path, class: 'btn btn-sm btn-success' %>
  </span>
</h3>

<ul>
  <% @attractions.each do |attraction| %>
    <li><%= attraction.attraction_name %> <%= link_to "Edit", edit_attraction_path(attraction) %> <%= link_to "Delete", attraction_path(attraction), method: :delete, data: { confirm: 'Are you sure?'} %></li>
  <% end %>
</ul>