<%= form_for @city do |form| %>
  <div class="form-group">
    <%= form.label :city_name %>
    <%= form.text_field :city_name, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= form.label :state_id %>
    <%= form.collection_select :state_id, State.order(:name), :id, :name, { include_blank: true }, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= form.label :image %>
    <%= form.text_field :city_image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :city_description, class: "form-control", rows: 5 %>
  </div>
  <%= form.button 'Create City', class: "btn btn-success" %>
<% end %>