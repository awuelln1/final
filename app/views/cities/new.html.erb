<form action="/cities" method="POST">
 
  <div class="form-group">
    <label for="name">Name of the City</label>
    <input type="text" class="form-control" id="name" placeholder="Enter the name of the city">
  </div>

  <div class="form-group">
    <label for="summary">Attraction</label>
    <input type="text" class="form-control" id="attraction" placeholder="What is the attraction?">
  </div>

  <div class="form-group">
    <label for="sense">Sense</label>
    <input type="text" class="form-control" id="sense" placeholder="What is the sense?">
  </div>

  <button type="submit" class="btn btn-default">Submit</button>

</form>